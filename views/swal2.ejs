<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SweetAlert Ejemplo</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <button id="confirmar">Confirmar Acción</button>

    <script>
        document.getElementById('confirmar').addEventListener('click', function() {
            Swal.fire({
                title: '¿Seguro que desea continuar?',
                text: "Esta acción no se puede deshacer.",
                icon: 'warning',
                showCancelButton: true, // Muestra el botón de cancelar
                confirmButtonText: 'Sí, continuar',
                cancelButtonText: 'No, cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // El usuario hizo clic en "Sí, continuar"
                    Swal.fire('¡Hecho!', 'Tu acción ha sido confirmada.', 'success');
                } else if (result.isDismissed) {
                    // El usuario hizo clic en "No, cancelar"
                    Swal.fire('Cancelado', 'Tu acción ha sido cancelada.', 'error');
                }
            });
        });
    </script>
</body>
</html>
