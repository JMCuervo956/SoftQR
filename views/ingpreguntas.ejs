<body>
    <%- include('partials/navigation') %>  
    <br>
        <div class="content">
            <div>
                <div class="container mt-1">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <th>
                                <h4>Preguntas</h4>
                                <a href="/menuprc" class="btn btn-success btn-sm">Regresar</a>
                                <a href="/preguntas" class="btn btn-primary btn-sm">Adicionar</a>
                            </th>
                        </thead>        
                    </table>
                </div>

                <div class="container mt-1">
                    <table class="table table-bordered table-hover">
                        <thead>
                        </thead>
                        <tbody>

                            <% if (data && data.length > 0) { %>
                                <% data.forEach(function(item) { %>
                                    <tr>
                                        <td><%= item.texto %></td>
                                        <td>
                                                    <a href="/modificar?id=<%= item.id %>&texto=<%= item.texto %>" class="btn btn-warning btn-sm">Mod</a>
                                        </td>
                                        <td>
                                                    <a href="/eliminar?id=<%= item.id %>&texto=<%= item.texto %>" class="btn btn-danger btn-sm">Ret</a>
                                        </td>
                                        <td>
                                                    <a href="/opciones?id=<%= item.id %>&texto=<%= item.texto %>" class="btn btn-primary btn-sm">Opc</a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %> 
                                <tr>
                                    <td colspan="2">No hay datos disponibles</td>   
                                </tr>
                            <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
