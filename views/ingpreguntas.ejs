<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Asamblea</title>
    <!-- Enlace a Bootstrap CSS desde CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- cabecera -->
    <%- include('partials/head') %> <!-- <link rel="stylesheet" href="main.css"> /// partial para repetir en cada una de las paginas -->
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid rgb(247, 244, 244);
            padding: 8px;
            text-align: left;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 1rem;
        }

        main {
            flex: 1;
            padding: 20px;
        }

        .content {
            padding: 20px;
        }

        .image-section {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        footer {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px;
        }

        button {
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            margin: 5px;
        }

        button:hover {
            background-color: #45a049;
        }

        /* Estilos para pantallas pequeñas */
        @media (max-width: 768px) {
            .content {
                padding: 10px;
            }

            table {
                font-size: 14px;
            }

            button {
                padding: 8px 16px;
                font-size: 14px;
                margin: 5px 0;
                display: block;
                width: 100%;
            }

            .btn-container {
                display: flex;
                flex-direction: column;
                align-items: stretch;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <%- include('partials/navigation') %>  
    <main>
        <div class="content">
            <h3>Lista de Preguntas</h3>

            <div class="container mt-1">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Pregunta</th>
                            <th>
                                <div class="btn-container">
                                    <a href="/preguntas" class="btn btn-primary btn-sm">Adicionar</a>
                                    <a href="/menuprc" class="btn btn-success btn-sm">Regresar</a>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data && data.length > 0) { %>
                            <% data.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.texto %></td>
                                    <td>
                                        <div class="btn-container">
                                            <a href="/modificar" class="btn btn-warning btn-sm">Modificar</a>
                                            <button class="confirmar btn btn-danger btn-sm">Eliminar</button>
                                            <form action="/eliminar/<%= item.id %>" method="POST" style="display:inline;">
                                            </form>
                                            <a href="/ver" class="btn btn-primary btn-sm">Opciones</a>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %> 
                            <tr>
                                <td colspan="2">No hay datos disponibles</td>   
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!-- Enlace a Bootstrap JS y dependencias desde CDN -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.querySelectorAll('.confirmar').forEach(button => {
            button.addEventListener('click', function() {
                Swal.fire({
                    title: '¿Seguro que desea continuar?',
                    text: "Esta acción no se puede deshacer.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, continuar',
                    cancelButtonText: 'No, cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire('¡Hecho!', 'Tu acción ha sido confirmada.', 'success');
                        // Aquí podrías enviar el formulario o realizar la acción de eliminar
                    } else if (result.isDismissed) {
                        Swal.fire('Cancelado', 'Tu acción ha sido cancelada.', 'error');
                    }
                });
            });
        });
    </script>
   
    <%- include('partials/footer') %>
</body>
</html>
