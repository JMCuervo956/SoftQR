<!-- register.html -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Registro</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Incluye SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <%- include('partials/head') %>
</head>
<body>
    <script src="app.js"></script>
    <%- include('partials/navigation') %>  
    <div class="content">
        <div class="register-form"> 
            <h4>Registro de Usuarios</h4>
            <form id="registerForm" action="/register" method='POST'> 
                <div class="contenedor__login-register">
                    <input type="text" name="user" class="input-small" placeholder="Usuario" required>
                    <h1></h1>
                    <input type="text" name="name" class="input-small" placeholder="Nombre" required>
                    <h1></h1>    
                    <input type="password" name="pass" class="input-small" placeholder="Contraseña" required>
                    <h1></h1>
                    <label for="rol">Rol</label>           
                    <select name="rol" id="rol" class="select-css">
                        <option value="admin" selected>Usuario</option>
                        <option value="Usuario">Administrador</option>
                    </select>
                    <div style="display: inline;">
                        <h5></h5>
                        <a href="/menuprc" class="btn-cancel">Cancelar</a><input type="submit" class="btn-save" value="Registrar">
                    </div>
                </div>       
            </form>    
        </div>
    </div>

    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Evitar que el formulario se envíe de forma tradicional

            const formData = new FormData(this);
            const response = await fetch('/register', {
                method: 'POST',
                body: new URLSearchParams(formData)
            });

            const result = await response.json();

            if (result.status === 'success') {
                Swal.fire({
                    title: result.title,
                    text: result.message,
                    icon: result.status,
                    showConfirmButton: false,
                    timer: 1500
                }).then(() => {
                    window.location.href = '/menuprc'; // Redirigir al usuario si es necesario
                });
            } else {
                Swal.fire({
                    title: result.title,
                    text: result.message,
                    icon: result.status,
                    showConfirmButton: true
                });
            }

        });
    </script>
    <%- include('partials/footer') %>  
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/src/main.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>
