<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Escanear Código QR</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      flex-direction: column;
      text-align: center;
    }
    video {
      border: 2px solid #000;
      margin-bottom: 20px;
      width: 100%;
      max-width: 400px;
      height: auto;
    }
    #qr-result {
      font-size: 18px;
      margin-top: 20px;
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Escanear Código QR</h1>
  <video id="video" width="100%" height="auto" style="border: 1px solid #000;"></video>
  <div id="qr-result">Resultado del QR: <span id="qr-text">No escaneado</span></div>
  
  <!-- Botón para iniciar el escaneo -->
  <button id="startScanBtn">Iniciar escaneo</button>

  <script type="module">
    import QrScanner from 'https://unpkg.com/qr-scanner@1.3.0/qr-scanner.min.js';

    const videoElement = document.getElementById('video');
    const qrResultElement = document.getElementById('qr-text');
    const startScanBtn = document.getElementById('startScanBtn');
    let scanner;

    // Función para iniciar el escáner
    function startScanner() {
      console.log('Iniciando escáner...');

      if (scanner) {
        console.log("El escáner ya está en uso.");
        return;
      }

      // Creamos una nueva instancia del escáner
      scanner = new QrScanner(videoElement, result => {
        console.log("Resultado del escaneo:", result);
        qrResultElement.textContent = result.data; // Muestra el resultado del QR
        localStorage.setItem('qrResult', result.data); // Guarda el resultado en memoria (localStorage)
        stopScanner(); // Detenemos el escáner después de obtener el resultado
      }, error => {
        // Se activa si hay algún problema en la lectura del código QR
        console.log("Error de escaneo:", error);
        qrResultElement.textContent = "Error al leer el código QR. Intenta nuevamente.";
      });

      // Verificamos si el dispositivo tiene una cámara
      QrScanner.hasCamera().then(hasCamera => {
        if (hasCamera) {
          console.log("Cámara encontrada. Iniciando escaneo...");
          scanner.start().catch(error => {
            console.error("Error al iniciar la cámara: ", error);
            qrResultElement.textContent = "No se pudo acceder a la cámara";
          });
        } else {
          console.error("No se encuentra una cámara en este dispositivo");
          qrResultElement.textContent = "No se encuentra una cámara en este dispositivo";
        }
      }).catch(err => {
        console.error("Error al verificar la cámara: ", err);
        qrResultElement.textContent = "Error al acceder a la cámara";
      });
    }

    // Función para detener el escáner
    function stopScanner() {
      if (scanner) {
        console.log("Deteniendo el escáner...");
        scanner.stop();
      }
    }

    // Evento de clic en el botón para iniciar el escaneo
    startScanBtn.addEventListener('click', () => {
      qrResultElement.textContent = "Escaneando...";
      startScanner();
    });
  </script>
</body>
</html>

