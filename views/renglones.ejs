<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Capturar Preguntas</title>
</head>
<body>
    <h1>Formulario de Preguntas</h1>
    
    <!-- Formulario para capturar preguntas -->
    <form id="formPreguntas" action="/procesar-preguntas" method="POST">
        <table id="tablaPreguntas">
            <thead>
                <tr>
                    <th>Pregunta</th>
                    <th>Respuesta</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí se irán agregando preguntas dinámicamente -->
            </tbody>
        </table>

        <br>

        <button type="button" onclick="agregarPregunta()">Agregar Pregunta</button>
        <button type="submit">Enviar</button>
    </form>

    <script>
        // Contador de preguntas
        var contadorPreguntas = 0;

        // Función para agregar una nueva pregunta
        function agregarPregunta() {
            contadorPreguntas++;
            
            // Capturamos el cuerpo de la tabla
            var tabla = document.getElementById("tablaPreguntas").getElementsByTagName('tbody')[0];

            // Creamos una nueva fila
            var nuevaFila = tabla.insertRow();

            // Columna para la pregunta
            var celdaPregunta = nuevaFila.insertCell(0);
            celdaPregunta.innerHTML = '<input type="text" name="pregunta' + contadorPreguntas + '" placeholder="Escribe la pregunta" required>';

            // Columna para la respuesta
            var celdaRespuesta = nuevaFila.insertCell(1);
            celdaRespuesta.innerHTML = '<input type="text" name="respuesta' + contadorPreguntas + '" placeholder="Escribe la respuesta" required>';
        }
    </script>
</body>
</html>
